@model CodeFirstKisiler.Models.Adres

@{
    ViewBag.Title = "Duzenle";
}

<h2>Duzenle</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.AdresTanim, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.AdresTanim, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AdresTanim, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.KisiId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.DropDownListFor(x => x.KisiId, (List<SelectListItem>)ViewBag.kisiler, new { htmlAttributes = new { @class = "form-control" } })

        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Kaydet" class="btn btn-warning" />
        </div>
    </div>

}
@if (ViewBag.Result != null)
{
    <div class="alert alert-@ViewBag.Status">
        @ViewBag.Result

    </div>
}